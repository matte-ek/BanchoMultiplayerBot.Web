@using BanchoMultiplayerBot.Web.Services
@inject LobbyService LobbyService

<MudNavMenu Rounded="true" Margin="Margin.Normal" Color="Color.Primary" Class="pa-2">
    <MudText Typo="Typo.h5" Class="ma-4">osu! ahr bot</MudText>
    <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Dashboard">Dashboard</MudNavLink>

    <!-- Lobbies -->
    
    @foreach (var lobby in LobbyService.Lobbies)
    {
        <MudNavLink Href="@($"lobby/{lobby.Id}")" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Tag">@lobby.Name</MudNavLink>
    }
    
    <MudNavLink Href="/lobby-add" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Add">Add new lobby...</MudNavLink>
    
    <MudNavGroup Title="Settings" Expanded="true" Icon="@Icons.Material.Filled.Settings">
        <MudNavLink Href="/settings/general" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Build">General</MudNavLink>
        <MudNavLink Href="/settings/administrators" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.AdminPanelSettings">Administrators</MudNavLink>
        <MudNavLink Href="/settings/announcements" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Announcement">Announcements</MudNavLink>
        <MudNavLink Href="/settings/ban-player" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.PersonOff">Player Bans</MudNavLink>
        <MudNavLink Href="/settings/ban-maps" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Cancel">Map Bans</MudNavLink>
    </MudNavGroup>
</MudNavMenu>